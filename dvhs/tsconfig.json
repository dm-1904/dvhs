{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@schemas/*": ["../common/schemas/*"]
    },
    "types": ["vite/client"] // or "react" if you're not using Vite
  },
  "include": ["src", "../common"],
  "exclude": ["dist", "server"]
}
